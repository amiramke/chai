<div id="header_action_box">
  <ul>
    <% if user_signed_in? %>
      <div class="signed_in_blue_links"><li><%= link_to current_user.email, edit_user_registration_path %></li>
      <li><%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %></li></div>
    <% else %>
      <li><%= link_to "Sign in", new_user_session_path %></li>
      <div class='signup'><li><%= button_to "Sign up!", new_user_registration_path, :method => 'get'%></li></div?>
    <% end %>

  </ul>
</div>

<div id="top-border"></div>

<%= form_for(@visit) do |f| %>

  <%= f.label 'wifi:' %>
  <%=f.select :wifi, options_for_select((1..10))%>
  <%= f.label 'power sockets:'%>
  <%=f.select :power, options_for_select((1..10))%>
  <%= f.label 'atmosphere:'%>
  <%=f.select :atmosphere, options_for_select((1..10))%>
  <%= f.label 'shops:' %>
  <%= f.select :shop_id, options_from_collection_for_select(Shop.all, :id, :name) %>
  <%= f.submit "Rate your visit", :class => "btn btn-medium btn-primary" %>

<% end %>